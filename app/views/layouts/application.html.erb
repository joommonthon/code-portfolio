<body>
  <div class="header">
    <div class="container">
      <div class="row">
        <div class="menu col-xs-8">
          <ul> 
            <li>
            	<%=link_to 'Welcome', welcome_path()%>
            </li> 
            <li>
              <%=link_to 'Portfolio', portfolio_path()%>
            </li>
            <li><a href="https://medium.com/@num/shirakawa-go-87b3370a322a">Blog</a></li>
            <li>
              <%=link_to 'About', about_path()%>
            </li> 
            <li>
              <%=link_to 'Contact', contact_path()%>
            </li> 
          </ul> 
        </div> 
        
        <div class="name col-xs-4"> 
          <h1>Num</h1> 
        </div> 
      </div>
    </div> 
  </div>

	<%= yield %>
  
	<div class="footer"> 
    <div class="container"> 
      <ul class="social_media"> 
        <li><a class="github" href="https://github.com/joommonthon">github</a></li> 
        <li><a class="linkedin" href="https://th.linkedin.com/pub/khomdej-joommonthon/37/501/942">linkedin</a></li> 
        <li><a class="twitter" href="https://twitter.com/joommonthon">twitter</a></li> 
